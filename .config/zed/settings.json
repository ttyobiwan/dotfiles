{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "theme": "Kanagawa",
  "icon_theme": "Material Icon Theme",
  // "ui_font_family": "Ubuntu Nerd Font",
  "buffer_font_family": "CommitMono",
  "buffer_font_size": 15,
  "ui_font_size": 16,
  "minimap": { "show": "never" },
  "collaboration_panel": { "button": false },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "relative_line_numbers": true,
  "restore_on_startup": "last_workspace",
  "show_edit_predictions": false,
  "show_completions_on_input": true,
  "tabs": {
    "file_icons": false,
    "activate_on_close": "neighbour"
  },
  "cursor_shape": "bar",
  "cursor_blink": false,
  "file_scan_exclusions": [
    "**/__pycache__/",
    "**/.pytest_cache/",
    "**/.ruff_cache/",
    ".DS_Store/",
    "tmp/",
    ".git/",
    ".elixir-tools/",
    ".elixir_ls/",
    "_build/"
  ],
  "vim_mode": true,
  "project_panel": {
    "dock": "left",
    "auto_fold_dirs": false,
    "indent_size": 13,
    "auto_reveal_entries": true,
    "scrollbar": { "show": "never" }
  },
  "terminal": {
    "dock": "bottom",
    "blinking": "off",
    "toolbar": {
      "breadcrumbs": false
    },
    "detect_venv": { "on": { "activate_script": "fish" } },
    "shell": "system"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tab_bar": { "show_nav_history_buttons": false },
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    "Elixir": {
      "show_edit_predictions": false,
      "language_servers": ["!expert", "elixir-ls"]
    },
    "HEEX": {
      "language_servers": ["elixir-ls", "tailwindcss-language-server"]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "basic",
          "diagnosticMode": "openFilesOnly",
          "autoSearchPaths": true,
          "useLibraryCodeForTypes": true,
          "diagnosticSeverityOverrides": {}
        }
      }
    }
  }
}
