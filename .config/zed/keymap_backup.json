[
  {
    "bindings": {
      "ctrl-s": "workspace::Save",
      "ctrl-shift-s": "workspace::SaveWithoutFormat",
      "ctrl-h": "pane::ActivatePrevItem",
      "ctrl-l": "pane::ActivateNextItem",
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-shift-h": "workspace::ActivatePreviousPane",
      "ctrl-shift-l": "workspace::ActivateNextPane",
      // Terminal
      // "ctrl-t": "terminal_panel::ToggleFocus",
      "ctrl-shift-t": "workspace::NewTerminal",
      "ctrl-t": "workspace::ToggleBottomDock",
      // "ctrl-shift-t": "workspace::ToggleBottomDock",
      // Project
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-shift-e": "workspace::ToggleLeftDock",
      "ctrl-shift-o": "projects::OpenRecent",
      "ctrl-shift-w": "workspace::CloseWindow",
      // AI
      "ctrl-i": "workspace::ToggleRightDock",
      // Search
      "ctrl-f": "file_finder::Toggle",
      "ctrl-shift-f": "workspace::NewSearch",
      "ctrl-shift-r": "search::ToggleReplace",
      // Disabled
      "cmd-r": null
      // "ctrl-i": null
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space f": "file_finder::Toggle",
      "space F": "workspace::NewSearch",
      "space |": "pane::SplitRight",
      "space \"": "pane::SplitDown",
      "space q": "project_panel::ToggleFocus",
      "space g b": "editor::ToggleGitBlameInline",
      "space r e f": "editor::FindAllReferences",
      "space r e n": "editor::Rename",
      "space c": "editor::Fold",
      "space C": "editor::UnfoldLines",
      "space v a": "editor::ToggleCodeActions",
      "/": "buffer_search::Deploy"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "space /": "editor::ToggleComments"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "shift-tab": "editor::ContextMenuPrev",
      "up": "editor::ContextMenuPrev",
      "ctrl-p": "editor::ContextMenuPrev",
      "tab": "editor::ContextMenuNext",
      "down": "editor::ContextMenuNext",
      "ctrl-n": "editor::ContextMenuNext",
      "pageup": "editor::ContextMenuFirst",
      "pagedown": "editor::ContextMenuLast"
    }
  }
]
